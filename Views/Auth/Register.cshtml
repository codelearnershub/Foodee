@model FOODEE.Models.ViewModel.AuthVM.CreateUser
@{
    Layout = "_DashboardLayout";
}

@{
    ViewBag.Title = "Register";
}

<div class="container">
    <div class="">
        <div class="">
            <div class="">
                <div class="">
                    <br /><br /><h2 class="text-center font-weight-bolder" style="color:darkred"><i class="fas fa-edit"></i> FOODEE SIGN UP FORM</h2><br /><br />
                </div>
                <form method="post">
                    <div class="">
                        <div class="form-row">
                            <div class="form-group col-md-5">
                                <label asp-for="LastName" class="form-check-label font-weight-bold"><span style="color: darkred">*</span> Last Name</label>
                                <input style="margin-right: 20px" asp-for="LastName" class="form-control " placeholder="Last Name" />
                                <span asp-validation-for="LastName" style="color:darkred"></span>
                            </div>
                            <div class="form-group col-md-2">
                            </div>
                            <div class="form-group col-md-5">
                                <label asp-for="FirstName" class="form-check-label font-weight-bold"><span style="color: darkred">*</span> First Name</label>
                                <input style="margin-right: 20px" asp-for="FirstName" class="form-control" placeholder="Last Name" />
                                <span asp-validation-for="FirstName" style="color:darkred"></span>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-5">
                                <label asp-for="PhoneNumber" class="form-check-label font-weight-bold"><span style="color: darkred">*</span> Phone number</label>
                                <input asp-for="PhoneNumber" class="form-control" placeholder="Phone Number" />
                                <span asp-validation-for="PhoneNumber" style="color:darkred"></span>
                            </div>
                            <div class="form-group col-md-2">
                            </div>
                            <div class="form-group col-md-5">
                                <label asp-for="Email" class="form-check-label font-weight-bold"><span style="color: darkred">*</span> Email</label>
                                <input asp-for="Email" class="form-control" placeholder="Email" />
                                @if (ViewBag.Message == "error")
                                {
                                    <p style="color:red; " class="font-weight-bolder  mb-2">*A customer with this Email already Exist!!</p>
                                }
                                <span asp-validation-for="Email" style="color:darkred"></span><br />

                            </div>
                            @*<div class="form-group col-md-2">
                            </div>*@
                            <div class="form-group col-md-5">
                                <label asp-for="Password" class="form-check-label font-weight-bold"><span style="color: darkred"></span>" Create Password</label>
                                <input type="password" asp-for="Password" class="form-control" placeholder="Password" value="" required />
                                <span asp-validation-for="Password" style="color: darkred" class="text-danger"></span><br>
                            </div>
                            <div class="form-group col-md-2">
                            </div>
                            <div class="form-group col-md-5">
                                <label asp-for="ConfirmPassword" class="form-check-label font-weight-bold"><span style="color: darkred"></span>" Confirm Password</label>
                                <input type="password" asp-for="ConfirmPassword" class="form-control" placeholder="ConfirmPassword" value="" required />
                                <span asp-validation-for="ConfirmPassword" style="color: darkred" class="text-danger"></span><br>
                            </div>
                            <div class="form-group col-md-2">
                            </div>
                        </div>

                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label class="form-check-label font-weight-bold" asp-for="Address"><span style="color: darkred">*</span> Address</label>
                                <textarea style="margin-right: 20px" asp-for="Address" class="form-control" placeholder="Address"></textarea>
                                <span asp-validation-for="Address" style="color:darkred"></span><br>
                            </div>
                            <div class="form-group col-md-1">
                            </div>
                            <div class="form-group col-md-4">
                                <label class="form-check-label font-weight-bold" asp-for="Gender"><span style="color: darkred">*</span> Select Gender</label>
                                <select asp-for="Gender" class="form-control">
                                    <option disabled selected>--Select Gender--</option>
                                    <option value="Male">Male</option>
                                    <option value="Female">Female</option>
                                </select>
                                <span asp-validation-for="Gender" style="color:darkred"></span><br>
                            </div>
                        </div>

                    </div>
                    <div class="form-group">
                        <input type="submit" value="Register" class="btn" style="background:orchid" />
                        <span class="mr-3">
                            Already Registered?<a asp-area="" asp-controller="Auth" asp-action="Login">
                                Login
                                Here
                            </a>
                        </span>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
