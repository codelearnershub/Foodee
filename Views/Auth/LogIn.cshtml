@model FOODEE.Models.ViewModel.AuthVM.LoginUser
@{
    Layout = "_DashboardLayout";
}

@{
    ViewBag.Title = "Login";
}

<link rel="stylesheet" type="text/css" href="~/fonts/iconic/css/material-design-iconic-font.min.css">
    <link rel="stylesheet" type="text/css" href="~/vendor/animate/animate.css">
    <link rel="stylesheet" type="text/css" href="~/vendor/css-hamburgers/hamburgers.min.css">
    <link rel="stylesheet" type="text/css" href="~/vendor/animsition/css/animsition.min.css">
    <link rel="stylesheet" type="text/css" href="~/vendor/select2/select2.min.css">
    <link rel="stylesheet" type="text/css" href="~/vendor/daterangepicker/daterangepicker.css">
    <link rel="stylesheet" type="text/css" href="~/css/util.css">
    <link rel="stylesheet" type="text/css" href="~/css/main.css">
    <link rel="stylesheet" href="~/fonts/material-icon/css/material-design-iconic-font.min.css">
    <link rel="stylesheet" href="~/css/sweetalert.min.css" />

    <link rel="stylesheet" href="~/css/style.css">

@if (ViewBag.Message == "error")
{
    <p style="color:red; background-color: whitesmoke; margin-left:450px; margin-right:450px" class="text-center font-weight-bolder  mb-2">Invalid Email/Password</p>
}
<div class="limiter">
    <div class="container-login100" style="background-image: url('/images/bg-01.jpg');">
        <div class="wrap-login100 p-l-55 p-r-55 p-t-65 p-b-54">
            <form class="login100-form validate-form" method="post">
                <span class="login100-form-title p-b-49">
                    Login
                </span>

                <div class="wrap-input100 validate-input m-b-23" data-validate="Email is required">
                    <span class="label-input100">Email</span>
                    <input asp-for="Email" class="input100" type="text" name="Email" placeholder="Type Your Email">
                    <span asp-validation-for="Email" class="focus-input100" data-symbol="&#xf206;"></span>
                </div>
                <div class="wrap-input100 validate-input" data-validate="Password is required">
                    <span class="label-input100">Password</span>
                    <input asp-for="Password" class="input100" type="Password" name="Password" placeholder="Type Your Password">
                    <span asp-validation-for="Password" class="focus-input100" data-symbol="&#xf206;"></span>
                </div>
                <div class="container-login100-form-btn">
                    <div class="wrap-login100-form-btn">
                        <div class="login100-form-bgbtn"></div>
                        <button class="login100-form-btn">
                            Login
                        </button>
                    </div>
                </div>
                <div class="flex-col-c p-t-155">
                    <span class="txt1 p-b-17">
                        Or Sign Up Using
                    </span>
                    <span class="mr-3">
                        <a asp-area="" asp-controller="User" asp-action="Register">
                            <strong>Sign Up</strong>
                        </a>
                    </span>
                </div>
            </form>
        </div>
    </div>
</div>
<div id="dropDownSelect1"></div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
