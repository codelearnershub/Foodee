@model IEnumerable<FOODEE.Models.MenuItem>
@{
    Layout = "_Layout";
}

@{
    ViewData["Title"] = "Index";
}
<h1 class="text-center">Available Foods</h1>

<div class="card">
    <div class="card-body">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Menu</th>
                    <th>MenuItem</th>
                    <th>Price</th>
                    <th>Image</th>
                    <th>Description</th>
                    <th>Action</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model)
                {
                <tr>
                    <td> @product.MenuId </td>
                    <td> @product.Name </td>
                    <td> @product.Price </td>
                    <td> @product.Image </td>
                    <td> @product.Description </td>
                    <td>
                        <a class="btn btn-success" asp-action="Update" asp-route-id="@product.Id">Update </a>
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@product.Id">Delete</a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<br>
<div class="mb-3 border-right">
    <a class="btn btn-success" asp-controller="MenuItem" asp-action="Add">Add Food</a>
</div>